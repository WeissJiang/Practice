@keyframes animate{
    0%,100%
    {
        color:pink;
        filter: blur(2px);
        text-shadow: 0 0 10px #ffff66;
                     0 0 20px #00b3ff;
                     0 0 40px #00b3ff;
                     0 0 80px #00b3ff;
                     0 0 120px #00b3ff;
                    
    }
    5%,95%
    {
        color: #999933;
        filter: blur(0px);
        text-shadow: none;
    }
}
